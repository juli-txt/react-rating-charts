{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/esm", // Output ES module files in a separate directory
    "module": "ESNext", // Use ESNext module format for ESM
    "moduleResolution": "node", // Ensures module paths are resolved correctly
    "declaration": false, // Don't generate .d.ts files here; they are already generated by the main tsconfig.json
    "declarationMap": false, // Disable declaration maps since we are not generating declarations
    "sourceMap": false // Optionally disable source maps for the ES module build
  }
}
